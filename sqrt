using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp1
{
    internal class Program
    {
        static int Line(int a,int b,int c)
        {
            return (a + b + c) / 2;
        }

        
        static void Main(string[] args)
        {
            int a=0, b, c;
            a = (int)Console.Read();
            b = Console.Read();
            c = Console.Read();
            int L = Line(a, b, c);
            int allsum = (L - a)(L - a) + (L - b)(L - b) + (L - c)(L - c);


            int s = Math.Sqrt(allsum,2);

            Console.Write(s);


        }
    }
}
