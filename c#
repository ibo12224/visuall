using System;
class SimpleIOApp {
public static void Main() {
int i; char c;
Console.Write("Enter a digit and a character = ");
i = Console.Read() - 48; // ‘0’ = 48 (문자 코드 값 )
c = (char)Console.Read(); // (char) : casting 연산자: int => char
Console.Write("i = " + i);
Console.WriteLine(", c = " + c);
}
}
